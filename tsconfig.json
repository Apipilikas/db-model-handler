{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "commonjs",                                         
    "allowJs": true,
    "outDir": "./dist",                          
    "rootDir": "./src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "src/tests"
  ]
}
